@model string

@section Styles {
<link href="@Url.Content("~/css/warning.css")" rel="stylesheet" type="text/css" />
}

@{
ViewData["Title"] = "Warning Page";
}

@section Header {
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark mb-3">
        <div class="container-fluid ml-3 mr-3">
            <a class="nav-link mr-sm-2 main-link" asp-area="" asp-controller="Home" asp-action="Index">Бронювання</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
            <div class="animated-navbar-toggler-icon"><span></span><span></span><span></span><span></span></div>
        </button>
        <div class="navbar-collapse collapse justify-content-between flex-sm-row">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link ml-sm-1 px-sm-3" asp-area="" asp-controller="PersonalBooking" asp-action="Edit">Особисті бронювання</a>
                </li>
            </ul>
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link mr-sm-1 px-sm-3" asp-area="" asp-controller="Profile" asp-action="Edit">Профіль</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link ml-sm-2" asp-area="" asp-controller="Authentication" asp-action="LogOut">Вихід</a>
                    </li>
                </ul>
            }
        </div>
    </div>
</nav>
</header>
}

<div class="warning d-flex align-items-center justify-content-center">
    <div class="text-center">
        <h2 class="mb-3 px-5 py-4 d-flex align-items-center justify-content-center">
            <img src="~/img/warning_icon.png" alt="Warning img" width="50" />
            Sorry, you do not have access to this page
            <img src="~/img/warning_icon.png" alt="Warning img" width="50" />
        </h2>
        <h3>@Model</h3>
    </div>
</div>