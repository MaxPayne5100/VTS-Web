@model VTS.Web.Models.LogInModel

@section Styles {
	<link href="@Url.Content("~/css/login.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/lib/wow.js/css/animate.css")" rel="stylesheet" type="text/css" />
}

@{
	ViewData["Title"] = "Login";
}

@section Header {}

<div class="login-form pt-5 wow fadeIn" data-wow-duration="1.5s">
	<h2>Залогіньтесь, щоб продовжити</h2>

	<form method="post" class="mt-5 mb-5 pb-5">
		<div class="form-stuff mb-5">
			<div class="d-flex flex-column mb-3">
				<label class="ml-2">ID працівника</label>
				<input class="pl-3" />
			</div>
			<div class="d-flex flex-column mb-3">
				<label class="ml-2">Емейл</label>
				<input class="pl-3" />
			</div>
		</div>
		<button type="submit"><span>Логін</span></button>
	</form>
</div>

@section Scripts {
	<script src="~/lib/wow.js/js/wow.min.js" asp-append-version="true"></script>
	<script>
          new WOW().init();
	</script>
}