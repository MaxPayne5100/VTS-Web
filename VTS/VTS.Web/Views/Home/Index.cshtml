@{
ViewData["Title"] = "Vacation Booking";
}

@section Header {
<header>
	<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark mb-3">
		<div class="container-fluid ml-4 mr-4">
			<a class="nav-link active pr-sm-3 main-link" asp-area="" asp-controller="Home" asp-action="Index">Бронювання відпусток</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
			aria-expanded="false" aria-label="Toggle navigation">
			<div class="animated-navbar-toggler-icon"><span></span><span></span><span></span><span></span></div>
		</button>
		<div class="navbar-collapse collapse justify-content-between flex-sm-row">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link px-sm-3" asp-area="" asp-controller="Home" asp-action="Privacy">Особисті бронювання</a>
				</li>
			</ul>
			@if (User.Identity.IsAuthenticated)
			{ 
				<ul class="navbar-nav justify-content-end">
					<li class="nav-item">
						<a class="img-link pr-sm-3">
							<img src="~/img/avatar.png" alt="Profile" width="50" />
						</a>
						<a class="nav-link link-mobile pr-sm-3">Профіль</a>
					</li>
					<li class="nav-item">
						<a class="nav-link pl-sm-3" asp-area="" asp-controller="Authentication" asp-action="LogOut">Вихід</a>
					</li>
				</ul>
			}
		</div>
	</div>
</nav>
</header>
}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
</div>