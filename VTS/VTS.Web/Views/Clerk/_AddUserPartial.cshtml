@model VTS.Web.Models.UserModel

<!-- Modal -->
<div class="modal fade" id="AddingUser" tabindex="-1" role="dialog" aria-labelledby="AddingUserLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title" id="AddingUserLabel">Додавання юзерів</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-danger">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="AddUser">
                    <div asp-validation-summary="ModelOnly" class="field-validation-error"></div>
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />

                    <div class="mb-4">
                        <label asp-for="FirstName" class="ml-2">Вкажіть ім'я користувача</label>
                        <input asp-for="FirstName" class="pl-3 py-2 w-100 border" />
                        <span asp-validation-for="FirstName" class="field-validation-error"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="LastName" class="ml-2">Вкажіть прізвище користувача</label>
                        <input asp-for="LastName" class="pl-3 py-2 w-100 border" />
                        <span asp-validation-for="LastName" class="field-validation-error"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Email" class="ml-2">Вкажіть електронну пошту користувача</label>
                        <input asp-for="Email" class="pl-3 py-2 w-100 border" />
                        <span asp-validation-for="Email" class="field-validation-error"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Role" class="ml-2">Оберіть роль користувача</label>
                        <select id="role" asp-for="Role" class="w-100 selectpicker"
                                title="-- Оберіть роль --">
                            <option disabled selected>-- Оберіть роль --</option>
                            <option>Employee</option>
                            <option>Manager</option>
                            <option>Clerk</option>
                        </select>
                        <span asp-validation-for="Role" class="field-validation-error"></span>
                    </div>

                    <div id="hidden-field" class="mb-4">
                        <label asp-for="ManagerId" class="ml-2">Виберіть менеджера</label>
                        <select id="ManagerId" asp-for="ManagerId" class="w-100 selectpicker" data-live-search="true"
                                title="-- Оберіть менеджера --">
                            @await Component.InvokeAsync("ManagerOptions")
                        </select>
                        <span asp-validation-for="ManagerId" class="field-validation-error"></span>
                    </div>
                </form>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="butt px-3 py-2 mt-3 mb-3" id="Submit">
                        Додати
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
